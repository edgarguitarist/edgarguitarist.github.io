---
import { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";
import { LanguageSelector, Trans } from "astro-i18next/components";
import Navbar from "../components/Navbar.astro";

changeLanguage("en");
---

<Layout title="Welcome to Astro.">
	<Navbar username="edgarguitarist">
		<LanguageSelector showFlag={false} class="languages text-black " /> 
	</Navbar>
	<main>
		<h1 class="mt-10 text-4xl font-bold">{t("home.salute")}</h1>
		<h2 class="text-3xl my-5">
			<Trans i18nKey="home.subtitle">
				This page is being migrated to <a class="text-gradient" href="https://astro.build/">ASTRO</a> ðŸš€!
			</Trans>
		</h2>
		
		<h3 class="text-gradient text-xl font-bold">{t("home.seeyousoon")}</h3>
		
		<iframe class="my-5" width="560" height="315" src="https://www.youtube.com/embed/2GgiZZhO-PA?controls=0&autoplay=1" title="cat breakdancing for 10 hours" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 80%;
		text-align: -webkit-center;
	}
	a{
		font-weight: bolder;
	}
	
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	
</style>
