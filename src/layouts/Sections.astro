---
interface Props {
  id: string;
  title: string;
  className?: string;
}

const { className, id, title } = Astro.props;
---

<section id={id} class={` pt-28 block min-h-screen ${className ?? ''}`}>
  {
    title && (
      <h1 class="text-5xl text-gray-800 dark:text-gray-100 font-bold text-center drop-shadow-[5px_5px_0_rgba(0,0,0,0.25)] dark:drop-shadow-[5px_5px_0_rgba(255,255,255,0.10)]">
        {title}
      </h1>
    )
  }
  <slot />
</section>
