---
import i18next, { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/me.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{t("site.title")}</title>
    <meta name="description" content={t("site.description")} />
  </head>

  <body>
    <Navbar username="edgarguitarist">
      <LanguageSelector showFlag={false} class="languages text-black" />
    </Navbar>
    <main
      class="relative lg:m-auto sm:m-0 bg-white lg:pb-28 px-6 max-w-screen-xl z-10 text-center"
    >
      <slot />
    </main>
  </body>
  <Footer />
</html>
