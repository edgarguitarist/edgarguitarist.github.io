---
import Icon from "astro-icon";
import { t } from "i18next";
import type { NavDicInterface, Nav } from "../types/global.types"
interface Props {
  link: Nav;
}

const { link } = Astro.props;
const navStyle =
  "h-border-gradient inline-flex md:gap-x-2 gap-x-1 font-semibold items-center px-1 text-sm md:text-lg mt-[2px] ";

const iconStyle = "size-5 mt-0.5";

const navDic:NavDicInterface = {
  aboutme: {
    href: "#aboutme",
    iconName: "mdi:star",
    label: t("index.nav.aboutme"),
  },
  projects: {
    href: "#projects",
    iconName: "mdi:react",
    label: t("index.nav.projects"),
  },
  knowledge: {
    href: "#knowledge",
    iconName: "mdi:book-open-variant",
    label: t("index.nav.knowledge"),
  },
};

const navElement = navDic[link as Nav];

---
<a href={navElement.href} id={`${link}_nav`} class={navStyle}>
  <Icon name={navElement.iconName} class={iconStyle}/>
  {navElement.label}
</a>


