---
import Sections from "@layouts/Sections.astro";
import ButtonSocials from "@components/buttons/ButtonSocials.astro";
import { Info } from "../../types/global.types";
import { t } from "i18next";
import me from "db/user.json"
import pin from "@icons/pin-sharp-circle.svg"
import company from "@icons/company.svg"


import X from "@icons/x.astro";
import Github from "@icons/github.astro";
import Linkedin from "@icons/linkedin.astro";
import Document from "@icons/document.astro";
const iconStyle = "m-auto w-3/5 h-3/5 hover:transform hover:scale-105";
---

<Sections id="aboutme" title="">
  <div class="lg:flex md:flex sm:block h-[85vh]">
    <div class="w-1/2 flex">
      <img
        src="/images/me.webp"
        width="500"
        height="500"
        alt="Edgar Mariano Laz TerÃ¡n"
        class="rounded-full profile-photo m-auto"
      />
    </div>
    <div class="lg:w-1/2 w-2/3 lg:mx-10 md:mx-6 pt-6 m-auto flex flex-col gap-5">
      <p class="text-center text-4xl font-bold">
        <span class="drop-shadow-[5px_5px_0_rgba(0,0,0,0.25)] dark:drop-shadow-[5px_5px_0_rgba(255,255,255,0.10)] text-gray-800 dark:text-gray-100"
          >{t("index.about.description")}</span
        >
      </p>
      <p class="place-self-center text-xl font-bold flex gap-x-2 text-gray-800 dark:text-gray-100">
        <img src={company} alt="" class="w-8 h-8 dark:invert">
        <span class="">{t("index.about.position")} {t("index.about.pp")} {me.company}</span>
      </p>
      <p class="place-self-center text-xl font-bold flex gap-x-2 text-gray-800 dark:text-gray-100">
        <img src={pin} alt="" class="w-8 h-8 dark:invert"> {me.location}
      </p>
      <p class="text-center">
        <a href="#projects">
          <span class="text-center text-3xl font-bold p-6 text-sky-800 dark:text-sky-600"
            >{t("index.about.subtitle")} </span
          >
        </a>
        <span class="text-3xl">ðŸ‘½</span>
      </p>
      <div class="flex lg:gap-x-4 gap-x-2 place-content-center">
        <ButtonSocials footer={false} social={Info.x}>{<X class={iconStyle}/>}</ButtonSocials>
      <ButtonSocials footer={false} social={Info.linkedin}>{<Linkedin class={iconStyle}/>}</ButtonSocials>
      <ButtonSocials footer={false} social={Info.github}>{<Github class={iconStyle}/>}</ButtonSocials>
      <ButtonSocials footer={false} social={Info.pdf2}>{<Document class={iconStyle}/>}</ButtonSocials>
      </div>
    </div>
  </div>
</Sections>
